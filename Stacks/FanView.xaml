<Window x:Class="Stacks.FanView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="FanView" 
        Height="Auto" 
        Width="Auto"
        SizeToContent="WidthAndHeight"
            
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True">

    <!-- PERBAIKAN: "Deactivated" dan "Loaded" sudah dihapus dari tag Window di atas -->

    <Border Background="#DD222222" CornerRadius="12" BorderThickness="1" BorderBrush="#555555">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ItemsControl x:Name="FileItemsControl" Grid.Row="0" Margin="10,10,10,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="5"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10" HorizontalAlignment="Center" MouseMove="File_MouseMove" MouseLeftButtonUp="File_MouseLeftButtonUp">
                            <Image Source="{Binding Thumbnail}" Width="80" Height="80" Stretch="Uniform"/>
                            <TextBlock Text="{Binding FileName}" 
                                       Foreground="White" 
                                       TextTrimming="CharacterEllipsis" 
                                       TextAlignment="Center" 
                                       MaxWidth="100" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Rectangle Grid.Row="1" Height="1" Fill="#555555" Margin="15,5,15,5" Opacity="0.5"/>

            <Button x:Name="OpenInExplorerButton"
                    Grid.Row="1" 
                    Content="Open in File Explorer" 
                    Margin="15,10,15,15"
                    Padding="5"
                    Background="Transparent"
                    Foreground="White"
                    BorderThickness="0"
                    HorizontalAlignment="Center"
                    Click="OpenInExplorerButton_Click"/>
        </Grid>
    </Border>
</Window>