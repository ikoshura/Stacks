<mica:MicaWindow x:Class="Stacks.FanView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        
        d:DataContext="{d:DesignInstance Type=local:FanView}"
        xmlns:local="clr-namespace:Stacks"
        xmlns:mica="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"

        Title="FanView"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True">

    <mica:MicaWindow.Resources>
        <!-- Style custom untuk tombol supaya hover tidak biru -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource App.SecondaryTextBrush}"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover ala Mica (abu-abu lembut, bukan biru) -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#22000000"/>
                            </Trigger>
                            <!-- Klik -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#33000000"/>
                            </Trigger>
                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </mica:MicaWindow.Resources>

    <Border Background="{DynamicResource App.BackgroundBrush}" 
            CornerRadius="12" 
            BorderThickness="1" 
            BorderBrush="{DynamicResource App.BorderBrush}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Daftar file -->
            <ItemsControl x:Name="FileItemsControl" Grid.Row="0" Margin="10,10,10,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10"
                                    HorizontalAlignment="Center"
                                    MouseMove="File_MouseMove"
                                    MouseLeftButtonUp="File_MouseLeftButtonUp">
                            <Image Source="{Binding Thumbnail}" 
                                   Width="80" Height="80" Stretch="Uniform"/>
                            <TextBlock Text="{Binding FileName}"
                                       Foreground="{DynamicResource App.PrimaryTextBrush}"
                                       TextTrimming="CharacterEllipsis" 
                                       TextAlignment="Center" 
                                       MaxWidth="100" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <!-- Panel bisa horizontal/vertical sesuai SettingsManager -->
                <ItemsControl.Style>
                    <Style TargetType="ItemsControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Current.Orientation, Source={x:Static local:SettingsManager.Instance}}" Value="Horizontal">
                                <Setter Property="ItemsPanel">
                                    <Setter.Value>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="5"/>
                                        </ItemsPanelTemplate>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Current.Orientation, Source={x:Static local:SettingsManager.Instance}}" Value="Vertical">
                                <Setter Property="ItemsPanel">
                                    <Setter.Value>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" />
                                        </ItemsPanelTemplate>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ItemsControl.Style>
            </ItemsControl>

            <!-- Separator -->
            <Rectangle Grid.Row="1" Height="1" Fill="{DynamicResource App.BorderBrush}" Margin="15,5,15,5" Opacity="0.5"/>

            <!-- Tombol Explorer -->
            <Button x:Name="OpenInExplorerButton"
                    Grid.Row="1" 
                    Content="Open in File Explorer" 
                    Margin="15,10,15,15"
                    HorizontalAlignment="Center"
                    Click="OpenInExplorerButton_Click"/>
        </Grid>
    </Border>
</mica:MicaWindow>
