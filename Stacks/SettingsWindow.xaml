<mica:MicaWindow x:Class="Stacks.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mica="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
        mc:Ignorable="d"

        Title="Stacks Settings"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        Foreground="{DynamicResource App.PrimaryTextBrush}">

    <mica:MicaWindow.Resources>
        <!-- Style modern Anda -->
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource App.PrimaryTextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <StackPanel>
                            <TextBlock Text="{TemplateBinding Header}" Margin="0,0,0,5" Foreground="{DynamicResource App.PrimaryTextBrush}" FontWeight="Bold"/>
                            <ContentPresenter/>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource App.BackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource App.PrimaryTextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource App.BorderBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource App.PrimaryTextBrush}"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="{DynamicResource App.PrimaryTextBrush}"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource App.PrimaryTextBrush}"/>
        </Style>
    </mica:MicaWindow.Resources>

    <Border Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <GroupBox Header="Source Folder">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="SourceFolderTextBox" Grid.Column="0" IsReadOnly="True" VerticalContentAlignment="Center"/>
                        <Button x:Name="BrowseButton" Grid.Column="1" Content="Browse..." Click="BrowseButton_Click"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Theme">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="SystemThemeRadio" Content="System" IsChecked="True" GroupName="Theme" Checked="ThemeRadioButton_Checked"/>
                        <RadioButton x:Name="LightThemeRadio" Content="Light" GroupName="Theme" Checked="ThemeRadioButton_Checked"/>
                        <RadioButton x:Name="DarkThemeRadio" Content="Dark" GroupName="Theme" Checked="ThemeRadioButton_Checked"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Appearance">
                    <StackPanel>
                        <TextBlock Text="Vertical Offset (Jarak dari Taskbar)"/>
                        <TextBox x:Name="VerticalOffsetTextBox" Width="80" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </GroupBox>

                <CheckBox x:Name="StartupCheckBox" Content="Run when Windows starts"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button x:Name="SaveButton" Content="Save" IsDefault="True" Click="SaveButton_Click"/>
                <Button x:Name="CancelButton" Content="Cancel" IsCancel="True" Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</mica:MicaWindow>