<!-- FILE: Stacks/MainContextMenu.xaml -->
<ContextMenu x:Class="Stacks.MainContextMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stacks"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=local:TrayViewModel}">
    <MenuItem Header = "Show/Hide Settings" Command="{Binding ShowSettingsCommand}" />
    <Separator />
    <MenuItem Header = "Exit" Command="{Binding ExitApplicationCommand}" />
</ContextMenu>