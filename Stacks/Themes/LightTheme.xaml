<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="App.BackgroundBrush" Color="#A0FFFFFF"/>
    <SolidColorBrush x:Key="App.BorderBrush" Color="#AAAAAA"/>
    <SolidColorBrush x:Key="App.PrimaryTextBrush" Color="Black"/>
    <SolidColorBrush x:Key="App.SecondaryTextBrush" Color="#555555"/>
    <SolidColorBrush x:Key="App.HoverBrush" Color="#10000000"/>
    <SolidColorBrush x:Key="App.HoverBrushInverted" Color="#20000000"/>

    <!-- Tambahkan icon untuk light theme -->
    <BitmapImage x:Key="App.WidgetIcon" UriSource="/Icons/icon-light.png"/>
</ResourceDictionary>