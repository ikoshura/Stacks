<Window x:Class="Stacks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StacksWidget"
        Height="40" Width="40"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Topmost="True">
    <Grid>
        <Button x:Name="WidgetButton"
                ToolTip="Open Stacks"
                BorderThickness="0"
                Background="Transparent"
                Cursor="Hand">

            <!-- Style mirip tombol taskbar Win11 -->
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <!-- Background overlay untuk hover/pressed -->
                                    <Border x:Name="Overlay"
                                            Background="Transparent"
                                            CornerRadius="8"/>
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <!-- Hover -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Overlay"
                                                Property="Background"
                                                Value="#10ffffff"/>
                                        <!-- abu gelap -->
                                    </Trigger>
                                    <!-- Pressed -->
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="Overlay"
                                                Property="Background"
                                                Value="#08ffffff"/>
                                        <!-- lebih gelap -->
                                    </Trigger>
                                    <!-- Disabled -->
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Overlay"
                                                Property="Background"
                                                Value="Transparent"/>
                                        <Setter Property="Opacity" Value="0.4"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>

            <!-- Ikon -->
            <Image Source="{DynamicResource App.WidgetIcon}" Width="20" Height="20"/>

            <!-- ContextMenu -->
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Settings" Click="Settings_Click"/>
                    <Separator/>
                    <MenuItem Header="Exit" Click="Exit_Click"/>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
    </Grid>
</Window>